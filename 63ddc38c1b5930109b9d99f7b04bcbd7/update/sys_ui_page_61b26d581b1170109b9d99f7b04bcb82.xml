        <client_script><![CDATA[// jQuery('#addDog').click(function(){

// })

$j(document).ready(function () {
    $j('#msg').hide();

    $j('#addDog').click(function () {
        //    alert($j('#dogName').val());
        console.log("Inicio del registro de dogs");
        var ga = new GlideAjax('fetchUtils');
        ga.addParam('sysparm_name', 'createDog');
        ga.addParam('sysparm_dog_name', $j('#dogName').val());
        ga.addParam('sysparm_dog_age', $j('#dogAge').val());
        ga.addParam('sysparm_dog_neutered', $j('#dogNeutered').is(':checked'));
        ga.addParam('sysparm_dog_shots', $j('#dogShots').is(':checked'));
        ga.getXML(fetchBallback);
    });
    function fetchBallback(response) {
        $j('#msg').show();
        console.log("response xml:" + response);
         var answer = response.responseXML.documentElement.getAttribute('answer').split('|');
        //var answer = response.responseXML.documentElement.getAttribute('answer');
        $j('#msg').append('<p><strong>' + answer[0] + '</strong> ,se registro correctamente. Dog ID: ' + answer[1]  + '</p><br><a href="'+answer[2] +'">View new Dog </a>');
    }
});

]]></client_script>
